    <script>
      (function () {
        try {
          const btn = document.getElementById('back-button')
          if (!btn) return

          // Hide the back button when we're on the fallback (home) page
          try {
            const fallback = btn.getAttribute('data-fallback') || '/'
            try {
              const fbPath = new URL(fallback, location.origin).pathname.replace(/\/+$/,'') || '/'
              const curPath = location.pathname.replace(/\/+$/,'') || '/'
              if (fbPath === curPath) {
                btn.style.display = 'none'
              }
            } catch (e) {
              // ignore URL parsing errors
            }
          } catch (e) {
            // ignore
          }

          btn.addEventListener('click', function () {
            try {
              const fallback = btn.getAttribute('data-fallback') || '/'
              if (document.referrer) {
                try {
                  const ref = new URL(document.referrer)
                  if (ref.origin === location.origin) {
                    history.back()
                    return
                  }
                } catch (e) {
                  // ignore and fallback
                }
              }
              location.href = fallback
            } catch (e) {
              location.href = btn.getAttribute('data-fallback') || '/'
            }
          })
        } catch (e) {
          // noop
        }
      })()
    </script>
